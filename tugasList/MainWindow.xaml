<Window x:Class="tugasList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tugasList"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="696">
    <Grid>
        <!-- Left side: List of names -->
        <ListBox Name="nameListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="10">
            <!-- You can add items to this ListBox in code-behind -->
        </ListBox>

        <!-- Right side: Stack with TextBox and Add button -->
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="320,10,0,0">
            <!-- TextBox for input -->
            <TextBox Name="nameTextBox" Width="200" Margin="0,0,0,10" />

            <!-- Button to add name -->
            <Button Content="Add Name" Click="AddNameButton_Click" Margin="100,0,100,0" />
        </StackPanel>
    </Grid>
</Window>
